@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>

<p class="title">Search Results</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0) 
    {
      <p>No matched!</p>
    }
    else
    {
      @foreach (Client Client in Model)
      {
        <li>@Html.ActionLink($"{Client.ClientName}", "Details", "Clients", new {id = Client.ClientId })</li>
      }
    }
  </div>
</div>