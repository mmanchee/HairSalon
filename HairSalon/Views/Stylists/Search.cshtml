@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<p class="title">Search Results</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0) 
    {
      <p>No matched!</p>
    }
    else
    {
      @foreach (Stylist stylist in Model)
      {
        <li>@Html.ActionLink($"{stylist.StylistName}", "Details", "Stylists", new {id = stylist.StylistId })</li>
      }
    }
  </div>
</div>