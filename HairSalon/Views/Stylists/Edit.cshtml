@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<button type="button" class="btn btn-info" onclick="window.location.href='/Stylists/{@Model.StylistId}';">Back @Model.StylistName</button>

<h4>Editing @Model.StylistName</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StylistId)
  <table class="set-table">
    <tr>
      <td>@Html.LabelFor(model => model.StylistName)</td>
      <td>@Html.EditorFor(model => model.StylistName, new { @required = "required"})</td>
    </tr>
  </table>
    <input type="submit" value="Save" class="btn btn-info"/>
}