@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

@Html.ActionLink( "All Stylists", "Index", "Stylists", null, new { @class = "btn btn-info" })
@Html.ActionLink( "Edit", "Edit", "Stylists", new { id = Model.StylistId }, new { @class = "btn btn-info" })
@Html.ActionLink( "Add Client", "Create", "Clients", null, new { @class = "btn btn-info" })

<h2>@Html.DisplayFor(model => model.StylistName)'s Details</h2>
<hr />
<table class="set-table">
  <tr>
    <td>@Html.DisplayName("Name"):</td>
    <td>@Html.DisplayFor(model => model.StylistName)</td>
  </tr>
  <tr>
    <td>@Html.DisplayName("Specialty"):</td>
    <td>@Html.DisplayFor(model => model.Specialty)</td>
  </tr>
</table>

<div class="box">
  <div class="inner-box">
    @if (@Model.Clients.Count == 0)
    {
      <p>No Clients have been added yet!</p>
    }
    else
    {
      @foreach (Client client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId})</li>
      }
    }
    
  </div>
</div>