@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

@Html.ActionLink( "Add Stylist", "Create", null, null, new { @class = "btn btn-info" })
@if (@Model.Count > 0)
{
  @Html.ActionLink( "Add Client", "Create", "Clients", null, new { @class = "btn btn-info" })
}

<h1>Stylists</h1>

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <p>No Stylists have been added yet!</p>
    }
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    }
  </div>  
</div>