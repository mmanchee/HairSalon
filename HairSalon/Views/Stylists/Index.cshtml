@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<button type="button" class="btn btn-info" onclick="window.location.href='/Stylists/Create';">Add Stylist</button>
@if (@Model.Count > 0)
{
  <button type="button" class="btn btn-info" onclick="window.location.href='/Clients/Create';">Add Client</button>
}

<h1>Stylists</h1>

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <p>No Stylists have been added yet!</p>
    }
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    }
  </div>  
</div>